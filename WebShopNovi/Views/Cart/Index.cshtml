@model List<WebShopNovi.Models.CartItem> // ili CartItemViewModel ako koristiš view modele -->

<h2>Your Cart</h2>

@if (Model == null || !Model.Any())
{
    <p>Your cart is empty.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Price €</td>
                    <td>
                        <form asp-controller="Cart" asp-action="DecreaseQuantity" method="post" style="display:inline;">
                            <input type="hidden" name="productId" value="@item.ProductId" />
                            <button type="submit" class="btn btn-secondary btn-sm">-</button>
                        </form>

                        <span>@item.Quantity</span>

                        <form asp-controller="Cart" asp-action="IncreaseQuantity" method="post" style="display:inline;">
                            <input type="hidden" name="productId" value="@item.ProductId" />
                            <button type="submit" class="btn btn-secondary btn-sm">+</button>
                        </form>
                    </td>

                    <td>@(item.Price * item.Quantity) €</td>
                    <td>
                        <form asp-controller="Cart" asp-action="RemoveFromCart" method="post">
                            <input type="hidden" name="productId" value="@item.ProductId" />
                            <button type="submit" class="btn btn-danger btn-sm">Remove</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <h4>Total: @Model.Sum(item => item.Price * item.Quantity) €</h4>

    <div id="paypal-button-container"></div>

    <script src="https://www.paypal.com/sdk/js?client-id=ATaGM0EFTTMJrDY0al4LmlEvXk4rJOE7ub_ZZ2jMRB75m7pPm5b9LvqqGqI3k3bn10ApkIJ9OTV5NzqR&currency=EUR"></script>

    <script>
        paypal.Buttons({
            createOrder: function(data, actions) {
                const totalAmount = '@Model.Sum(item => item.Price * item.Quantity)';
                return actions.order.create({
                    purchase_units: [{
                        amount: {
                            value: totalAmount
                        }
                    }]
                });
            },
            onApprove: function(data, actions) {
                return actions.order.capture().then(function(details) {
                    alert('Transaction completed by ' + details.payer.name.given_name);
                    // Ovdje možeš preusmjeriti korisnika ili poslati podatke backendu
                });
            }
        }).render('#paypal-button-container');
    </script>
}
